<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pinet.rest.mapper.ExchangeRecordMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.pinet.rest.entity.ExchangeRecord">
        <result column="id" property="id"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="del_flag" property="delFlag"/>
        <result column="customer_id" property="customerId"/>
        <result column="exchange_product_id" property="exchangeProductId"/>
        <result column="score" property="score"/>
        <result column="prod_type" property="prodType"/>
        <result column="prod_name" property="prodName"/>
        <result column="exchange_num" property="exchangeNum"/>
        <result column="shop_id" property="shopId"/>
        <result column="shop_name" property="shopName"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        create_by,
        create_time,
        update_by,
        update_time,
        del_flag,
        customer_id, exchange_product_id, score, prod_type, prod_name, exchange_num, shop_id, shop_name
    </sql>
    <select id="selectExchangeRecordList" resultType="com.pinet.rest.entity.vo.ExchangeRecordListVo">
        select er.id,er.prod_name prodName,ep.img_url imgUrl,er.create_time createTime,er.score
        from exchange_record er
                 left join exchange_product ep on ep.id = er.exchange_product_id
        where er.del_flag = 0 and er.customer_id = #{customerId} order by er.create_time desc
    </select>

</mapper>
