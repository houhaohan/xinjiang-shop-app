<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pinet.rest.mapper.KrySideDishGroupDetailMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.pinet.rest.entity.KrySideDishGroupDetail">
        <result column="id" property="id" />
        <result column="create_by" property="createBy" />
        <result column="create_time" property="createTime" />
        <result column="update_by" property="updateBy" />
        <result column="update_time" property="updateTime" />
        <result column="del_flag" property="delFlag" />
        <result column="shop_prod_id" property="shopProdId" />
        <result column="dish_id" property="dishId" />
        <result column="side_dish_group_id" property="sideDishGroupId" />
        <result column="side_dish_id" property="sideDishId" />
        <result column="side_dish_name" property="sideDishName" />
        <result column="add_price" property="addPrice" />
        <result column="sort" property="sort" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        create_by,
        create_time,
        update_by,
        update_time,
        del_flag,
        shop_prod_id, dish_id, side_dish_group_id, side_dish_id, side_dish_name, add_price, sort
    </sql>


    <resultMap id="SideDishGroupMap" type="com.pinet.rest.entity.vo.KrySideDishGroupVo">
        <result column="id" property="id" />
        <result column="dish_id" property="dishId" />
        <result column="group_name" property="groupName" />
        <collection property="sideDishGroupDetailList" ofType="com.pinet.rest.entity.vo.KrySideDishGroupDetailVo">
            <result column="side_detail_id" property="id"/>
            <result column="side_dish_group_id" property="sideDishGroupId"/>
            <result column="side_dish_id" property="sideDishId"/>
            <result column="side_dish_name" property="sideDishName"/>
            <result column="add_price" property="addPrice"/>
        </collection>
    </resultMap>

    <select id="getByShopProdId" resultMap="SideDishGroupMap">
        select ksdg.id,
        ksdg.dish_id,
        ksdg.group_name,
        ksdgd.id as side_detail_id,
        ksdgd.side_dish_group_id,
        ksdgd.side_dish_id,
        ksdgd.side_dish_name,
        (ksdgd.add_price/100) as add_price
        from kry_side_dish_group ksdg
        left join kry_side_dish_group_detail ksdgd on ksdg.id = ksdgd.side_dish_group_id and ksdgd.del_flag = 0
        where ksdg.shop_prod_id = #{shopProdId} and ksdg.del_flag = 0
        order by ksdg.id, ksdgd.id
    </select>

</mapper>
