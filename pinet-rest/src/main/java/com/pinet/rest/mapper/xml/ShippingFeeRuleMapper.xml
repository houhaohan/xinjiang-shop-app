<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pinet.rest.mapper.ShippingFeeRuleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.pinet.rest.entity.ShippingFeeRule">
        <result column="id" property="id"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="del_flag" property="delFlag"/>
        <result column="start_distance" property="startDistance"/>
        <result column="end_distance" property="endDistance"/>
        <result column="shipping_fee" property="shippingFee"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        create_by,
        create_time,
        update_by,
        update_time,
        del_flag,
        start_distance, end_distance, shipping_fee
    </sql>
    <select id="selectByDistance" resultType="java.math.BigDecimal">
        select shipping_fee
        from shipping_fee_rule
        where start_distance &lt;= #{distance}
          and end_distance >= #{distance}
        limit 1
    </select>

</mapper>
