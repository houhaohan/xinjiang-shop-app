<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pinet.rest.mapper.OrderMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.pinet.rest.entity.Order">
        <result column="id" property="id"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="del_flag" property="delFlag"/>
        <result column="order_no" property="orderNo"/>
        <result column="order_type" property="orderType"/>
        <result column="order_status" property="orderStatus"/>
        <result column="customer_id" property="customerId"/>
        <result column="shop_id" property="shopId"/>
        <result column="shop_name" property="shopName"/>
        <result column="order_price" property="orderPrice"/>
        <result column="order_prod_price" property="orderProdPrice"/>
        <result column="shipping_fee" property="shippingFee"/>
        <result column="estimate_arrival_start_time" property="estimateArrivalStartTime"/>
        <result column="estimate_arrival_end_time" property="estimateArrivalEndTime"/>
        <result column="actual_arrival_time" property="actualArrivalTime"/>
        <result column="order_distance" property="orderDistance"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        create_by,
        create_time,
        update_by,
        update_time,
        del_flag,
        order_no, order_type, order_status, customer_id, shop_id, shop_name, order_price, order_prod_price, shipping_fee, estimate_arrival_start_time, estimate_arrival_end_time, actual_arrival_time, order_distance, remark
    </sql>

    <resultMap id="selectOrderListResultMap" type="com.pinet.rest.entity.vo.OrderListVo">
        <result column="o_id" property="orderId"/>
        <result column="order_no" property="orderNo"/>
        <result column="shop_name" property="shopName"/>
        <result column="order_status" property="orderStatus"/>
        <result column="o_createTime" property="createTime"/>
        <result column="order_price" property="orderPrice"/>
        <collection property="orderProducts" resultMap="orderProductsResultMap"/>
    </resultMap>

    <resultMap id="orderProductsResultMap" type="com.pinet.rest.entity.OrderProduct">
        <result column="id" property="id"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="del_flag" property="delFlag"/>
        <result column="order_id" property="orderId"/>
        <result column="shop_prod_id" property="shopProdId"/>
        <result column="prod_name" property="prodName"/>
        <result column="prod_unit_price" property="prodUnitPrice"/>
        <result column="prod_num" property="prodNum"/>
        <result column="prod_price" property="prodPrice"/>
        <result column="prod_sku_id" property="prodSkuId"/>
        <result column="prod_sku_name" property="prodSkuName"/>
        <result column="shop_prod_spec_id" property="shopProdSpecId"/>
        <result column="prod_spec_name" property="prodSpecName"/>
        <result column="prod_img" property="prodImg"/>
    </resultMap>

    <select id="selectOrderList" resultMap="selectOrderListResultMap" parameterType="java.lang.Long">
        select o.id o_id,
               o.order_no,
               o.shop_name,
               o.order_status,
               o.create_time o_createTime,
               o.order_price,
               op.*
        from `order` o
            left join qingshi.order_product op on op.order_id = o.id
        where o.del_flag = 0
          and o.customer_id = #{customerId,jdbcType=BIGINT}
    </select>

    <select id="selectOrderDetail" resultType="com.pinet.rest.entity.vo.OrderDetailVo" parameterType="java.lang.Long">
        select o.id                          orderId,
               o.order_no                    orderNo,
               o.customer_id                 customerId,
               o.order_status                orderStatus,
               o.estimate_arrival_start_time estimateArrivalStartTime,
               o.estimate_arrival_end_time   estimateArrivalEndTime,
               o.shop_name                   shopName,
               o.shop_id                     shopId,
               o.order_prod_price            orderProdPrice,
               o.shipping_fee                shippingFee,
               o.order_price                 orderPrice,
               o.create_time                 createTime,
               o.remark
        from `order` o
        where o.del_flag = 0
          and o.id = #{orderId}
    </select>
    <select id="countShopOrderMakeNum" resultType="java.lang.Integer">
        select ifnull(count(1), 0)
        from `order`
        where del_flag = 0
          and shop_id = #{shopId}
          and create_time > #{queryDate}
          and order_status = 30
    </select>

</mapper>
