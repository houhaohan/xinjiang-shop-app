<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pinet.rest.mapper.OrderDiscountMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.pinet.rest.entity.OrderDiscount">
        <result column="id" property="id" />
        <result column="create_by" property="createBy" />
        <result column="create_time" property="createTime" />
        <result column="update_by" property="updateBy" />
        <result column="update_time" property="updateTime" />
        <result column="del_flag" property="delFlag" />
        <result column="order_id" property="orderId" />
        <result column="discount_amount" property="discountAmount" />
        <result column="discount_msg" property="discountMsg" />
        <result column="type" property="type" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        create_by,
        create_time,
        update_by,
        update_time,
        del_flag,
        order_id, discount_amount, discount_msg, `type`
    </sql>

    <insert id="insertBatchSomeColumn" useGeneratedKeys="true" keyProperty="id">
        insert into order_discount
        (create_by, create_time, order_id, discount_amount, discount_msg, `type`)
        values
        <foreach collection="list" item="item" separator="," index="index">
            (#{item.createBy},
            now(),
            #{item.orderId},
            #{item.discountAmount},
            #{item.discountMsg},
            #{item.type}
            )
        </foreach>
    </insert>

</mapper>
